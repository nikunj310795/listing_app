<% include partials/header %>


<div class="container">
	<h1>Welcome to the Homepage</h1>
	<div class="row ">
		<div class=" col-sm-4 " >
			<ul class="nav nav-pills nav-stacked">
  				<li role="presentation" class="active"><a href="/home">All</a></li>
  				<li role="presentation"><a href="/home/accounting">Accounting</a></li>
  				<li role="presentation"><a href="/home/dealership">Dealerships</a></li>
  				<li role="presentation"><a href="/home/restaurant">Restaurants</a></li>
  				<li role="presentation"><a href="/home/software">Software Solutions</a></li>
  				<li role="presentation"><a href="/home/furnishing">Furnishing</a></li>
			</ul>
		</div>

		<div class="col-sm-8 " >

				<div class="row">
		        	<nav aria-label="...">
		            	<ul class="pager" role="tablist">

		                    <li class="previous" onclick="goTo(1);"><a href="#"><span aria-hidden="true">←</span> Previous</a></li>
		                    
		                    <li class="active" id="first">
		                        <a aria-controls="tab1" data-toggle="tab" href="#tab1" role="tab">1</a>
		                    </li>
		                    <% for(var i=2;i<(Math.ceil(cards.length/3));i++) {%>
		                    <li>
		                        <a aria-controls="tab<%=i%>" data-toggle="tab" href="#tab<%=i%>" role="tab"><%=i%></a>
		                    </li>
		                    <% }%>

		                    <li id="last">
		                        <a aria-controls="tab<%=Math.ceil(cards.length/3)%>" data-toggle="tab" href="#tab<%=Math.ceil(cards.length/3)%>" role="tab"><%=Math.ceil(cards.length/3)%></a>
		                    </li>

		                    <li class="next" onclick="goTo(2);"><a href="#">Next <span aria-hidden="true">→</span></a></li>
		                </ul>
		            </nav>
		        </div>
		       
				<div class="row " style="display:flex; flex-wrap: wrap;">
					<div class="tab-content">
						<% cards.forEach(function(card,i){ %>

							<%if(i%3==0) { %>
								<div class="tab-pane <%if(i==0) { %> active <% } %>%>  " id="tab<%=(i/3)+1%>" role="tabpanel">
							<%} %>


							<div class="col-sm-4">
								<div class="thumbnail">
									<img src="<%=card.picture%>" alt="<%=card.picture%>">
									<div class="caption">
										<h3><%=card.company%></h3>

										<p><%=card.phrase%></p>
										<p>
										<a href="/home/<%=card.category%>/<%=card._id%>" class="btn btn-primary" role="button">Know More!!!!</a>
										</p>
									</div>
								</div>
							</div>
							<%if((i+1)%3==0 || (i==cards.length-1)) { %>
							</div>
							<%} %>
						<% });%>
				</div>
			</div>	
		</div>		
	</div>
</div>
	


<% include partials/footer %>
	

	